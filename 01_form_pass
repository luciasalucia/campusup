<?php
if (isset($_POST['send'])){
  $pass = $_POST['senha'];
	$pass = base64_encode(md5($pass));
	
	$clientesenha = '123';
	
	
	if ($pass == base64_encode(md5($clientesenha))){
		echo 'Cliente logou';	
	}else{
		echo 'Erro ao logar';
	}
	
}
?>

